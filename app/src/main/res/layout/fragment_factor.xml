<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@mipmap/ic_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/largeHeight"
        android:layout_marginBottom="@dimen/largeMargin"
        android:background="@color/grayColor_11"
        android:gravity="right|center_vertical">

        <org.berans.view.BRtextview
            fontName="iransans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/mediumMargin"
            android:text="صورتحساب"
            android:textSize="@dimen/xLargeTextSize"/>

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/xLargeHeight"
                android:gravity="right|center_vertical">

<!--                <org.berans.view.BRtextview
                    fontName="iransans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/mediumMargin"
                    android:text="اطلاعات بیمار"
                    android:textSize="@dimen/xLargeTextSize"/>

                <org.berans.view.BRtextview
                    fontName="iransans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/mediumMargin"
                    android:text="کد ملی بیمار:"
                    android:textSize="@dimen/xLargeTextSize"/>-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/xLargeHeight"
                android:gravity="right|center_vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/xLargeHeight"
                android:gravity="right|center_vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/xLargeHeight"
                android:gravity="right|center_vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/xLargeHeight"
                android:gravity="right|center_vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/xLargeHeight"
                android:gravity="right|center_vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/xLargeHeight"
                android:gravity="right|center_vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/xLargeHeight"
                android:gravity="right|center_vertical"></LinearLayout>


        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/xLargeHeight"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/xxSmallMargin"
            android:layout_marginLeft="@dimen/mediumMargin"
            android:layout_marginRight="@dimen/mediumMargin"
            android:layout_marginTop="@dimen/mediumMargin"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="50"
                android:paddingRight="2dp">

                <org.berans.view.BRbutton
                    android:id="@+id/btnCancel"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/red_button_drawable"
                    android:text="لغو درخواست و بازگشت"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/largeTextSize"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="50"
                android:paddingLeft="2dp">

                <org.berans.view.BRbutton
                    android:id="@+id/btnOk"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/green_button_dawable"
                    android:text="اتصال به درگاه بانگی"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/largeTextSize"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>




</LinearLayout>